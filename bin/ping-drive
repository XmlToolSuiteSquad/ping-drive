#!/usr/bin/env php
<?php

foreach ([__DIR__.'/../../../autoload.php', __DIR__.'/../../vendor/autoload.php', __DIR__.'/../vendor/autoload.php'] as $file) {
    if (file_exists($file)) {
        require_once $file;
        break;
    }
}

$application = new \Symfony\Component\Console\Application('Ping Drive', '0.1.0');

$application->add($defaultCommand = new \Forikal\PingDrive\Command\PingDriveCommand());
$application->setDefaultCommand($defaultCommand->getName(), true);

$application->run();
